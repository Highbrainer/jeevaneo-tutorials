{
	"name": "demo-jest-core",
	"author": "Alexandre BORGOLTZ",
	"version": "0.0.1-0",
	"description": "Dummy project for demo purpose",
	"main": "dist/module.js",
	"module": "src/module.js",
	"browser": "dist/module.js",
	"scripts": {
		"clean": "rimraf dist/*",
		"build:init": "mkdirp dist/",
		"prepublishOnly": "eslint --ext js src/**",
		"build:es5": "babel src -d dist",
		"build:bundle": "browserify -s demo --debug dist/module.js > dist/bundle.js",
		"zzzpostbuild:bundle": "cp dist/bundle.js /mnt/c/dev/ws/ws/httpd/WebContent/demo-jest/",
		"build": "run-s build:init clean build:es5 build:bundle",
		"test": "jest"
	},
	"zzzdependencies": {
		"core-js": "^3.6.5"
	},
	"devDependencies": {
		"@babel/cli": "^7.28.0",
		"@babel/core": "^7.28.0",
		"@babel/preset-env": "^7.28.0",
		"babel-preset-env": "^0.0.0",
		"browserify": "^17.0.1",
		"eslint": "^9.33.0",
		"jest": "^30.0.5",
		"jest-environment-jsdom": "^30.0.5",
		"jest-fetch-mock": "^3.0.3",
		"mkdirp": "^3.0.1",
		"npm-run-all": "^4.1.5",
		"rimraf": "^6.0.1"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"firefox": 60,
						"ie": 7
					},
					"useBuiltIns": "usage",
					"corejs": {
						"version": "3.8",
						"proposals": true
					}
				}
			]
		]
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"node": true,
			"es6": true
		},
		"extends": "eslint:recommended",
		"parserOptions": {
			"ecmaVersion": 2018,
			"sourceType": "module"
		},
		"rules": {
			"no-mixed-spaces-and-tabs": "off",
			"no-console": "off"
		}
	},
	"dependencies": {
		"core-js": "^3.45.0"
	}
}
